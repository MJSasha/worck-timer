@page "/timer"

<PageLayout ShowTabs>
    <Header>
        <div class="d-flex flex-row justify-content-center p-3">
            <div class="page-title">
                Таймер
            </div>
        </div>
    </Header>
    <Content>
        <div class="spacing-3 p-3 h-100">
            <div class="d-flex flex-row justify-content-center">
                <div class="sub-header">
                    @CurrentWorkTime.Humanize()
                </div>
            </div>
            <div class="d-flex justify-content-center align-items-center h-100">
                <div class="round-button" @onclick="_ => TimerButtonClick(!TimerIsRunning)">
                    @(TimerIsRunning ? "Стоп" : "Старт")
                </div>
            </div>
        </div>
    </Content>
</PageLayout>