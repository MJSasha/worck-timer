<div class="progress-bar @(Light ? "light" : "")" style="--progress-value: @Value;">
    <progress value="@Value" min="0" max="100" style="visibility:hidden; height:0; width:0;"></progress>
</div>

@code {
    [Parameter]
    public double Value { get; set; }

    [Parameter]
    public bool Light { get; set; }
}